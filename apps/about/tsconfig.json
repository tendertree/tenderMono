{
	"extends": "@config/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@src/*": [
				"src/*"
			],
			"@ui/custom/*": [
				"../../packages/ui/custom/*"
			],
			"@ui/shadcn/*": [
				"../../packages/ui/shadcn/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"next.config.mjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
