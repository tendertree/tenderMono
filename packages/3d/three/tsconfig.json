{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"jsx": "react",
		"allowJs": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"target": "es6",
		"moduleResolution": "node"
	},
	"strict": true,
	"include": [
		"types/**/*.ts" // Include custom types directory
	]
}
