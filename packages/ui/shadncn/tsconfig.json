{
	"extends": "@config/typescript-config/shadcn.json",
	"compilerOptions": {
		"skipLibCheck": true,
		    "suppressImplicitAnyIndexErrors": true,
		"outDir": "dist",
		"paths": {
			"@ui/custom/*": [
				"../../packages/ui/custom/**/*.tsx"
			]
		}
	},
	"include": [
		"cards/**/*",
		"base/**/*",
		"lists/**/*",
		"feature/**/*",
		"icons/**/*",
		"style/**/*",
		"types/**/*",
		"menu/**/*",
		"lib/**/*",
		"sections/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
