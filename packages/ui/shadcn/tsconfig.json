{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@ui/shadcn/*": [
				"./*"
			],
			"utils": [
				"./utils.ts"
			]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": [
		"base/**/*",
		"comp/**/*",
		"styles/**/*"
	]
}
