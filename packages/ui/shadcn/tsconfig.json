{
	"extends": "@config/typescript-config/react-library.json",
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": ".",
		"noImplicitAny": false,
		"strict": false,
		"noEmitOnError": false,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"allowJs": true,
		"esModuleInterop": true,
		"suppressImplicitAnyIndexErrors": true,
		"ignoreDeprecations": "5.0"
	},
	"include": [
		"base/*",
		"feature/*",
		"style/*",
		"types/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
