{
	"extends": "@config/typescript-config/react-library.json",
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": ".",
		"noEmitOnError": false,
		"allowJs": true,
		"suppressImplicitAnyIndexErrors": true,
		"ignoreDeprecations": "5.0",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": [
		"base/*",
		"feature/*",
		"style/*",
		"types/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
