{
	"extends": "@repo/typescript-config/react-library.json",
	"compilerOptions": {
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@repo/ui/*": [
				"./src/*"
			],
			"@repo/ui/utils": [
				"./src/utils.ts"
			],
			"@repo/ui/shadcn": [
				"./src/shadcn/*"
			],
			"@repo/ui/component": [
				"./src/component/*"
			]
		},
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"allowJs": true,
		"noEmit": true
	},
	"include": [
		"src",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
