{
 "extends": "@config/typescript-config/base.json",
 "compilerOptions": {
  "jsx": "react",
  "skipLibCheck": true,
  "suppressImplicitAnyIndexErrors": true,
  "esModuleInterop": true, // Add this line
  "outDir": "dist",
  "paths": {
   "@ui/basic/*": ["../../packages/ui/basic/**/*.tsx"]
  }
 },
 "include": [
  "camera/**/*",
  "light/**/*",
  "scene/**/*",
  "object/**/*",
  "shader/**/*",
  "texture/**/*",
  "theater/**/*",
  "types/**/*",
  "utils/**/*",
  "gallery/**/*"
 ],
 "exclude": ["node_modules", "dist"]
}
